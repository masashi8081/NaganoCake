<div class="container">
  <div class="row text-center">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品一覧</h2>
    </div>
    <div class="col-sm-2 px-sm-0 text-center mb-2">
      <%= link_to "商品新規登録", new_admin_item_path %>
    </div>
    <div class="row offset-1">
      <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center mx-auto mb-5">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td class="align-middle"><%= item.id %></td>
              <td class="align-middle"><%= link_to admin_item_path(item.id) do %>
                <u><%= item.name %></u>
              </td>
              <% end %>
              <td class="align-middle"><%= item.price %></td>
            </tr>
          </tbody>
          <% end %>
      </table>
      </div>
    </div>
  </div>
  <%= paginate @items, class:"text-center" %>
</div>
<h1>登録情報編集</h1>

<%= form_for (@customer) do |f| %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :（姓） %><br />
    <%= f.text_field :last_name, autofocus: true %><br />
    <%= f.label :（名） %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.label :（セイ） %><br />
    <%= f.text_field :last_name_kana %><br />
    <%= f.label :（メイ） %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集を保存" %>
  </div>
<% end %>


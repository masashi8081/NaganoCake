
  <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
  <% end %>


<div class="container">
  <div class="row mt-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
      <h2>ログイン</h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1">
      <h5>会員の方はこちらからログイン</h5>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.label :パスワード %>
    </div>
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-2 px-sm-0 offset-sm-1">
      <%= f.submit "ログイン", class:"btn btn-primary mt-3" %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-5 offset-md-1">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
